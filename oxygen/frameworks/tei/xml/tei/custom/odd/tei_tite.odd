  <front>
   <titlePage>
    <docTitle>
     <titlePart type="main">The TEI Tite</titlePart>
     <titlePart type="sub">A standard for off-site text encoding</titlePart>
    </docTitle>
    <docAuthor>Perry Trolard</docAuthor>
    <docDate>December 2006</docDate>
   </titlePage>
