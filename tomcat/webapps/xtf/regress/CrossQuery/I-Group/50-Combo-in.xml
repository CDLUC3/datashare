         sortGroupsBy="totalDocs" 
         sortDocsBy="sort-title"
         select="*[1-20]|Politics#1-20"/>
  <and>
    <exact field="subject">
      <term>classics</term>
    </exact>
    <term field="collection">uc</term>
  </and>
</query>
